// schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // Ensure to set your database URL in the .env file // Ensure to set your database URL in the .env file
}

model User {
  user_id          Int      @id @default(autoincrement())
  username         String   @unique
  email            String   @unique
  password_hash    String
  created_at       DateTime @default(now())
  vpets            Vpet[]
  notes            Note[]
  challenges       Challenge[]
}

model Vpet {
  vpet_id              Int      @id @default(autoincrement())
  user_id              Int
  level                Int
  experience_points    Int
  mood                 String
  created_at           DateTime @default(now())
  user                 User     @relation(fields: [user_id], references: [user_id])
}

model Note {
  note_id              Int      @id @default(autoincrement())
  user_id              Int
  title                String
  content              String
  created_at           DateTime @default(now())
  user                 User     @relation(fields: [user_id], references: [user_id])
}

model Challenge {
  challenge_id         Int      @id @default(autoincrement())
  user_id              Int
  description          String
  points_reward        Int
  is_completed         Boolean  @default(false)
  created_at           DateTime @default(now())
  user                 User     @relation(fields: [user_id], references: [user_id])
}